<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.hr_sys_demo_browserserver.mapper.ResumeMapper">
    <insert id = "add" parameterType="Resume">
        insert into resume_list (name, school, status) values (#{name}, #{school}, #{status})
    </insert>

    <update id = "delete" parameterType="Resume">
        update resume_list set status = 7 where id = #{id}
    </update>

    <select id = "get" parameterType="_int" resultType="Resume">
        select * from resume_list where id = #{id}
    </select>

    <update id="update" parameterType="Resume" >
        update resume_list set name = #{name}, school = #{school}, status = #{status} where id=#{id}
    </update>

    <select id = "list" resultType="Resume">
            select * from resume_list
    </select>
</mapper>